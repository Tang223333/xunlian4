<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".thl.Thl_2Activity">


    <EditText
        android:id="@+id/edit_11"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_edit_focus"
        android:hint="输入11位时自动隐藏输入法"
        android:maxLength="11"
        android:inputType="number"
        android:singleLine="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/edit_6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_edit_focus"
        android:hint="输入6位时自动隐藏输入法"
        android:maxLength="6"
        android:inputType="number"
        android:singleLine="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <Button
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="登录"
            android:textSize="35sp"
            android:id="@+id/btn_denglu"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/thl2_edit"
        android:textSize="30sp"
        android:hint="请输入文本"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/thl2_btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="文本是否为空"
            android:gravity="center"/>
        <Button
            android:id="@+id/thl2_btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="去掉头尾空格后的长度"
            android:gravity="center"/>
        <Button
            android:id="@+id/thl2_btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="是否由数字组成"
            android:gravity="center"/>
        <Button
            android:id="@+id/thl2_btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="省略后的文本"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/thl2_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30sp"/>


</LinearLayout>