<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="afdsa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/switch_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/switch_item"
            android:button="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="我是默认光标 And 这是默认边框"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="我的光标不见了 And 我的边框不见了"
            android:background="@null"
            android:cursorVisible="false"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="我的光标变红了 And 我的边框是圆角"
            android:background="@drawable/shape_edit_focus"
            android:textCursorDrawable="@drawable/text_cursor"/>
    </LinearLayout>





</LinearLayout>